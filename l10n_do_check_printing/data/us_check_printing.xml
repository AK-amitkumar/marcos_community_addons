<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="paperformat_check_bpde" model="report.paperformat">
            <field name="name">Cheque empresarial banco popular</field>
            <field name="default" eval="False"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <report id="action_print_check_bpde"
                string="Print Check (Top)"
                model="account.payment"
                name="l10n_do_check_printing.print_check_bpde"
                file="l10n_do_check_printing.print_check_bpde"
                report_type="qweb-pdf"
                attachment_use="True"
                attachment="'check_'+(object.partner_id.name)+'_'+(object.name)+'.pdf'"/>

        <record id="l10n_do_check_printing.action_print_check_bpde" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="l10n_do_check_printing.paperformat_check_bpde"/>
        </record>

    </data>
</openerp>
