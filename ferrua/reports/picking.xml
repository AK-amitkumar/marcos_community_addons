<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <template id="ferrua_report_delivery_document" inherit_id="stock.report_delivery_document">
            <div class="page" position="replace">
                <div class="page" style="font-size: 11px !important;">
                    <div class="row">
                        <div class="col-xs-6">
                            <div>
                                <span>
                                    <strong>Customer Address:</strong>
                                </span>
                            </div>
                            <div t-if="o.partner_id" name="partner_header">
                                <div t-field="o.partner_id"
                                     t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div>
                                <span>
                                    <strong>Número de conduce:</strong>
                                </span>
                            </div>
                            <h2>
                                <span t-field="o.name"/>
                            </h2>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Order (Origin)</strong>
                                </th>
                                <th name="td_sched_date_h">
                                    <strong>Scheduled Date</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="o.picking_type_id"/>
                                </td>
                                <td name="td_sched_date">
                                    <span t-field="o.min_date"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="not o.pack_operation_ids">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <!--<th><strong>Status</strong></th>-->
                                <!--<th><strong>Location</strong></th>-->
                                <th class="text-right">
                                    <strong>Quantity</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                </td>
                                <!--<td><span t-field="move.state"/></td>-->
                                <!--<td><span t-field="move.location_id"/></td>-->
                                <td class="text-right">
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="o.pack_operation_ids">
                        <t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')"
                           groups="stock.group_production_lot"/>
                        <thead>
                            <tr>
                                <th>
                                    <strong>Caja</strong>
                                </th>
                                <th>
                                    <strong>Posición</strong>
                                </th>
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <th t-if="has_serial_number">
                                    <strong>Serial Number</strong>
                                </th>
                                <!--<th><strong>Status</strong></th>-->
                                <!--<th><strong>Location</strong></th>-->
                                <!--<th class="text-right"><strong>Quantity</strong></th>-->
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
                                <td>
                                    <span t-field="pack_operation.result_package_id"/>
                                </td>
                                <td>
                                    <span t-field="pack_operation.position"/>
                                </td>
                                <td>
                                    <span t-field="pack_operation.product_id"/>
                                    <t t-if="not pack_operation.product_id and pack_operation.package_id">
                                        <span t-field="pack_operation.package_id"/>
                                    </t>
                                </td>
                                <t t-if="has_serial_number">
                                    <td t-if="pack_operation.pack_lot_ids">
                                        <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                            <thead>
                                                <tr>
                                                    <th>Lot</th>
                                                    <th>Qty</th>
                                                </tr>
                                            </thead>
                                            <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                                <td>
                                                    <span t-field="packlot.lot_id"/>
                                                    <t t-if="not packlot.lot_id">
                                                        <span t-field="packlot.lot_name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="packlot.qty"/>
                                                    <!--<xt t-if="o.picking_type_id.use_existing_lots and o.state!='done'"> / <span t-field="packlot.qty_todo"/></xt>-->
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td t-if="not pack_operation.pack_lot_ids"/>
                                </t>
                                <!--<td>-->
                                <!--<t t-set="mls" t-value="pack_operation.picking_id.move_lines"/>-->
                                <!--<t t-set="check" t-value="True"/>-->
                                <!--<t t-foreach="mls" t-as="ml">-->
                                <!--<t t-if="ml.product_id.id == pack_operation.product_id.id and check">-->
                                <!--<t t-set="check" t-value="False"/>-->
                                <!--<span t-field="ml.state"/>-->
                                <!--</t>-->
                                <!--</t>-->
                                <!--</td>-->
                                <!--<td>-->
                                <!--<span t-field="pack_operation.location_id"/>-->
                                <!--<span t-if="pack_operation.package_id">:</span>-->
                                <!--<span t-field="pack_operation.package_id"/>-->
                                <!--</td>-->
                                <!--<td class="text-right">-->
                                <!--<span t-field="pack_operation.product_qty"/>-->
                                <!--<span t-field="pack_operation.product_uom_id"/>-->
                                <!--</td>-->
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>


        <template id="ferrua_picking" inherit_id="stock.report_picking">


            <!--<xpath expr="//table[@t-if='o.pack_operation_ids']//thead//tr//th" position="before">-->
            <!--<th>-->
            <!--<strong>Posición</strong>-->
            <!--</th>-->
            <!--<th>-->
            <!--<strong>Caja</strong>-->
            <!--</th>-->
            <!--</xpath>-->

            <!--<xpath expr="//tr[@t-foreach='o.pack_operation_ids']//td" position="before">-->
            <!--<td>-->
            <!--<span t-field="pack_operation.position"/>-->
            <!--</td>-->
            <!--<td>-->
            <!--<span t-field="pack_operation.result_package_id"/>-->
            <!--</td>-->
            <!--</xpath>-->


            <table class="table table-condensed" t-if="o.pack_operation_ids" position="replace">
                <style>
                    body {
                    font-size: 11px !important;
                    }
                </style>

                <table class="table table-condensed" t-if="o.pack_operation_ids">
                    <thead>
                        <tr>
                            <th>
                                <strong>Caja</strong>
                            </th>
                            <th>
                                <strong>Posición</strong>
                            </th>
                            <th>
                                <strong>Producto</strong>
                            </th>
                            <!--<th>-->
                            <!--<strong>Cantidad</strong>-->
                            <!--</th>-->
                            <th>
                                <strong>Barcode</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
                            <td>
                                <span t-field="pack_operation.result_package_id"/>
                            </td>
                            <td>
                                <span t-field="pack_operation.position"/>
                            </td>
                            <td>
                                <span t-field="pack_operation.product_id"/>
                                <t t-if="not pack_operation.product_id and pack_operation.package_id">
                                    <span t-field="pack_operation.package_id"/>
                                </t>
                            </td>
                            <!--<td class="text-right">-->
                            <!--<span t-field="pack_operation.product_qty"/>-->
                            <!--<span t-field="pack_operation.product_uom_id" groups="product.group_uom"/>-->
                            <!--</td>-->
                            <!--<t t-if="o.picking_type_id.code != 'incoming'">-->
                            <!--<td>-->
                            <!--<span t-field="pack_operation.location_id"/>-->
                            <!--<span t-if="pack_operation.package_id">:</span>-->
                            <!--<span t-field="pack_operation.package_id"/>-->
                            <!--</td>-->
                            <!--</t>-->
                            <td>
                                <span t-if="pack_operation.product_id and pack_operation.product_id.barcode">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.product_id.barcode, 600, 100)"
                                         style="width:300px;height:50px"/>
                                </span>
                                <span t-if="pack_operation.package_id and not pack_operation.product_id">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.package_id.name, 600, 100)"
                                         style="width:300px;height:50px"/>
                                </span>
                                <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                    <thead>
                                        <tr>
                                            <th>Lot</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>
                                    <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                        <td>
                                            <span t-field="packlot.lot_id"/>
                                            <t t-if="not packlot.lot_id">
                                                <span t-field="packlot.lot_name"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="packlot.qty"/>
                                            <!--<t t-if="o.picking_type_id.use_existing_lots and o.state!='done'">/-->
                                            <!--<span t-field="packlot.qty_todo"/>-->
                                            <!--</t>-->
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <t t-if="o.picking_type_id.code != 'outgoing'">
                                <td>
                                    <span t-field="pack_operation.location_dest_id"/>
                                    <span t-if="pack_operation.result_package_id">:</span>
                                    <span t-field="pack_operation.result_package_id"/>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </table>

        </template>

    </data>
</openerp>